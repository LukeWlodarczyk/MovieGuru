{
  "name": "movieguru",
  "version": "1.0.0",
  "description": "SSR React app with REST API",
  "main": "server/index.js",
  "engines": {
    "node": "8.2.1",
    "npm": "6.3.0"
  },
  "scripts": {
    "test": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha -r ts-node/register __test__/**/*.test.ts",
    "build-dev": "npm run clean && npm run build -- -d --devtool source-map",
    "build-prod": "npm run clean && npm run build -- -p",
    "build": "webpack --config config/webpack.config.js",
    "watch": "npm run clean && npm run build -- -d --watch --devtool source-map",
    "watch-node": "nodemon server/main.js",
    "clean": "rimraf client server",
    "start": "node server/main.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm run build-prod"
  },
  "author": "Luke Wlodarczyk",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.0-beta.1",
    "babel-polyfill": "^6.26.0",
    "es6-shim": "^0.35.3",
    "express": "^4.16.3",
    "mongoose": "^5.2.15",
    "q": "^1.5.1",
    "react": "^16.5.1",
    "react-dom": "^16.5.1",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.5",
    "@types/chai-http": "^3.0.5",
    "@types/es6-promise": "^3.3.0",
    "@types/es6-shim": "^0.31.37",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/mongoose": "^5.2.16",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/react-loadable": "^5.4.1",
    "@types/react-redux": "^5.0.21",
    "@types/react-router-dom": "^4.3.1",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "babel": "^6.23.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chai-http": "^4.2.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.17.3",
    "rimraf": "^2.6.2",
    "ts-loader": "^4.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "webpack": "^4.3.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.7.2"
  },
  "proxy": "http://localhost:5000"
}
